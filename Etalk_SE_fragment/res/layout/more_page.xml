<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!--  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="开发中"
        android:textColor="#9933CC"
        android:textSize="24dp" />-->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:paddingBottom="20dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="20dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 推荐给微信好友 -->

            <RelativeLayout
                android:id="@+id/setting_wifi1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:background="@drawable/setting_bg" >

                <TextView
                    android:textSize="16.0dip"
                    android:textColor="#ff646464"
                    android:paddingLeft="20dip"
                    android:paddingTop="12dip"
                    android:paddingBottom="12dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WiFi设置" />

                <ImageView
                    android:id="@+id/setting_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:src="@drawable/setting_arrow" />
            </RelativeLayout>

            <!-- 反馈意见  关于我们  应用推荐 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_bg"
                android:layout_marginBottom="20dip"
                android:orientation="vertical" >

                <!-- 反馈意见 -->

                <RelativeLayout
                    android:id="@+id/setting_sip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:textSize="16.0dip"
                        android:textColor="#ff646464"
                        android:paddingLeft="20dip"
                        android:paddingTop="12dip"
                        android:paddingBottom="12dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIP设置" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:src="@drawable/setting_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#eeeeee" />

                <!-- 关于我们 -->

                <RelativeLayout
                    android:id="@+id/about_us_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:textSize="16.0dip"
	                    android:textColor="#ff646464"
	                    android:paddingLeft="20dip"
	                    android:paddingTop="12dip"
	                    android:paddingBottom="12dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:src="@drawable/setting_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#eeeeee" />

                <!-- 应用推荐 -->

                <RelativeLayout
                    android:id="@+id/app_recommend_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:textSize="16.0dip"
	                    android:textColor="#ff646464"
	                    android:paddingLeft="20dip"
	                    android:paddingTop="12dip"
	                    android:paddingBottom="12dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:src="@drawable/setting_arrow" />
                </RelativeLayout>
            </LinearLayout>
            
            <!-- 清除缓存 -->

            <RelativeLayout
                android:id="@+id/clear_cache_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:background="@drawable/setting_bg" >

                <TextView
                    android:textSize="16.0dip"
                    android:textColor="#ff646464"
                    android:paddingLeft="20dip"
                    android:paddingTop="12dip"
                    android:paddingBottom="12dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:src="@drawable/setting_arrow" />
            </RelativeLayout>
            
        </LinearLayout>
    </ScrollView> 

</LinearLayout>
