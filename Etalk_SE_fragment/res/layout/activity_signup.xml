<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/titlerelativelayout"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="50dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/Registration_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
             />

        <TextView
            android:id="@+id/Registration_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="登入"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >
                
                <LinearLayout
                	android:layout_width="match_parent"
                	android:layout_height="40dp"
                	android:weightSum="1"
                	android:orientation="horizontal" >
                	<TextView 
                	    android:paddingLeft="16dp"
                	    android:layout_weight="0.5"
                	    android:layout_width="wrap_content"
                	    android:layout_height="fill_parent"
                	    android:gravity="center|left"
                	    android:text="国家或地区"
                	    android:background="#FFFFFF"
                	    android:textColor="#000000"
                	    android:textSize="18sp"
                	    />
                	<TextView 
                	    android:paddingRight="16dp"
                	    android:layout_weight="0.5"
                	    android:layout_width="wrap_content"
                	    android:layout_height="fill_parent"
                	    android:gravity="center|right"
                	    android:text="中国 "
                	    android:background="#FFFFFF"
                	    android:textColor="#000000"
                	    android:textSize="18sp"
                	    />
                	</LinearLayout>

                <LinearLayout
                	android:layout_width="match_parent"
                	android:layout_height="wrap_content"
                	android:background="#C8C8C8"
                	android:weightSum="1"
                	android:orientation="horizontal" >
                	<!-- #ADADAD -->
                	<TextView 
                	    android:layout_weight="0.3"
                	    android:layout_width="wrap_content"
                	    android:layout_height="fill_parent"
                	    android:gravity="center"
                	    android:text="+86"
                	    android:background="#FFFFFF"
                	    android:textColor="#000000"
                	    android:textSize="18sp"
                	    />
                <EditText
                    android:layout_weight="0.7"
                    android:id="@+id/Registration_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.2dp"
                    android:background="#FFFFFF"
                    android:hint="请输入手机号"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="16sp" 
                    android:phoneNumber="true"/>
                </LinearLayout>


                <EditText
                    android:id="@+id/Registration_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.2dp"
                    android:background="#FFFFFF"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="16sp" />

               <!--  <EditText
                    android:id="@+id/Registration_password2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.2dp"
                    android:background="#FFFFFF"
                    android:hint="请重复注册密码"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="16sp" /> -->
            </LinearLayout>

            <TextView
                android:id="@+id/Registration_OK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="登　入"
                android:background="@drawable/login_btn"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
    
        <LinearLayout 
            android:layout_width="fill_parent"
       		android:layout_height="fill_parent"
        	android:orientation="horizontal"
        	android:weightSum="1"
            >
        <TextView 
            android:paddingLeft="8dp"
            android:layout_margin="8dp"
            android:layout_weight="0.5"
            android:gravity="left"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账户"
            android:textColor="#4278FB"
            />

        <TextView
            android:paddingRight="8dp"
            android:layout_margin="8dp"
            android:layout_weight="0.5"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="#4278FB" />

        </LinearLayout>

</LinearLayout>