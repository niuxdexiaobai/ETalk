<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<RelativeLayout 
        android:id="@+id/calllog_titlebar"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="50dp"
        android:background="@drawable/shape_global_titlebar_backgroud"
        android:layout_alignParentTop="true">
        <TextView 
            android:id="@+id/calllog_exitdelmode"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:text="取消"
            android:background="@drawable/shape_global_titlebar_commonbtnbg"
            android:visibility="invisible"
            />
        <TextView 
            android:id="@+id/calllog_tv_title"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="22sp"
            android:text="通话记录"
            android:textColor="@android:color/white"/>
	    <TextView
	        android:id="@+id/calllog_selectall"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:text="全选"
            android:background="@drawable/shape_global_titlebar_commonbtnbg"
            android:visibility="invisible"/>
    </RelativeLayout>

	<FrameLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/calllog_titlebar">
	    <ListView 
	        android:id="@+id/calllog_listview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
       	 	android:splitMotionEvents="true"/>
	    <RelativeLayout 
	        android:id="@+id/calllog_keyboard_area"
	        android:layout_width="match_parent"
	        android:layout_height="300dp"
	        android:layout_gravity="bottom"/>
	</FrameLayout>

</RelativeLayout>